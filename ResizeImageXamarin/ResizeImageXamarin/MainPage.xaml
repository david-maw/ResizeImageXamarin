<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResizeImageXamarin.MainPage">

    <StackLayout>
        <Button Text="Convert Image" Clicked="Button_Clicked"/>
        <Image x:Name="imageControl" Aspect="AspectFit" HeightRequest="500"/>
        <Label x:Name="labelControl" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
